{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true /* Generates .d.ts files for users */,
    "declarationMap": true /* Helps users jump to source code */,
    "sourceMap": true /* Generates .map files for debugging */,
    "outDir": "./dist" /* Where the compiled code goes */,
    "rootDir": "./src" /* Where your TS code lives */,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true /* Essential for your quotes.json */,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
